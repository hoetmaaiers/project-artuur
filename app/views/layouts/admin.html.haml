!!!
%html
%head
  %title ProjectArtuur
  = stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'admin', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  %nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse{role: "navigation"}
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} Project Artuur
    / Collect the nav links, forms, and other content for toggling
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{"class" => is_active?('/admin/workshops')}
          %a{href: "/dashboards"} workshops
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %a{"data-method" => "delete", "href" => destroy_user_session_path, "rel" => "nofollow", "class" => "logout-link"} Log out


      /.navbar-collapse
  %br
  %br
  %br

  .container
    = yield
