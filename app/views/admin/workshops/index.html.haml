.container
  %h2 New workshop

  = render partial: 'form', locals: {action: 'new'}

  %h2 All workshops
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th title
        %th actions

    - @workshops.each do |workshop|
      %tr
        %td= workshop.title
        %td
          = link_to 'edit', edit_admin_workshop_url(workshop), class: 'btn btn-primary'
          = link_to 'delete', admin_workshop_url(workshop), method: :delete, class: 'btn btn-danger'
