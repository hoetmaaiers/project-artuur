.well
  = form_for [:admin, @workshop], html: { class: 'form-horizontal' } do |f|
    %fieldset
      %legend New workshop

      / Title
      .form-group
        = f.label :title, class: 'control-label col-lg-2'
        .col-lg-10
          = f.text_field :title, class: 'form-control', placeholder: 'Title'

      / Description
      .form-group
        = f.label :description, class: 'control-label col-lg-2'
        .col-lg-10
          = f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 3


      .form-group
        = f.label :audience_list, class: 'control-label col-lg-2'
        .col-lg-10
          = f.text_field :audience_list, class: 'form-control', data: { role: "tagsinput" }

      .form-group

        = f.label :type, class: 'control-label col-lg-2'
        .col-lg-10
          = f.select :type, {class: 'form-controler' } do
            = options_for_select(['in house', 'on request'])

      = f.submit 'create', class: 'btn btn-primary'
